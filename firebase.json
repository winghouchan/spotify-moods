{
  "database": {
    "rules": "database.rules.json"
  },
  "functions": {
    "predeploy": ["yarn --cwd \"$RESOURCE_DIR\" run build"],
    "source": "functions"
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "database": {
      "port": 9000
    },
    "ui": {
      "enabled": true
    },
    "auth": {
      "port": 9099
    },
    "hosting": {
      "port": 5000
    },
    "pubsub": {
      "port": 8085
    }
  },
  "hosting": {
    "predeploy": ["yarn --cwd \"$RESOURCE_DIR\" run build"],
    "public": "web/build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
